<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom_TextInputLayout_Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--<item name="hintTextColor">@color/gray_btn_bg_color</item>-->
        <!--        <item name="hintTextAppearance">@style/TextView_Small</item>-->
        <item name="android:textColorHint">@color/black_dark</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="Custom_TextInputEditText_Style">
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Title_Style" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
